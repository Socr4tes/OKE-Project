@model IEnumerable<CountriesViewer.Models.Country>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Country", "Create")
</p>

<table class="table coutriesList">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Ajax.ActionLink(item.Name,
                 "Details",
                 new { name = item.Name },
                 new AjaxOptions
                 {
                     UpdateTargetId = "detailsPlaceholder",
                     InsertionMode = InsertionMode.Replace,
                     HttpMethod = "POST"
                 })
            </td>
        </tr>
    }

</table>

<div id="detailsPlaceholder">
</div>
